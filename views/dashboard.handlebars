<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="category">Category</label>
      <input type="text" id="category" name="category" />
    </div>
    <div>
      <label for="post-text">Text</label>
      <input type="text" id="post-text" name="post-text" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class = "card col-md">
        <div class = "card-header text-center bg-white text-dark">
          <h5 class = "card-title">
            {{post.title}}
          </h5>
        </div>
        <div class = "card-body bg-white text-dark">
          <h1 class = "card-text">
            {{post.category.category_name}}
          </h1>
          <p class = "card-text">
            {{post.post_text}}
          </p>
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </div>
      </div>
    {{/each}}
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>