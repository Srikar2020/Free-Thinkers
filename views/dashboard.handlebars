<div class = "d-flex flex-row justify-content-between">
  <section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="category">Category</label>
        <input type="text" id="category" name="category" />
      </div>
      <div>
        <label for="post-text">Text</label>
        <input type="text" id="post-text" name="post-text" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </section>
  
  <section>
    <h2>Create New Category</h2>

    <form class="new-category-form">
      <div>
        <label for="category">Category</label>
        <input type="text" id="new-category" name="new-category" />
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </section>
</div>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class = "card col-md">
        <div class = "card-header text-center bg-white text-dark">
          <h1 class = "card-title">
            {{post.title}}
          </h1>
          <h5 class = "card-text">
            created by {{post.user.username}} on {{format_date post.created_at}} in {{post.category.category_name}}
          </h5>
        </div>
        <div class = "card-body bg-white text-dark">
          <p class = "card-text">
            {{post.post_text}}
          </p>
        </div>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </div>
    {{/each}}
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>
<script src="/javascript/add-category.js"></script>