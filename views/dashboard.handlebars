<div class = "d-flex flex-row justify-content-around">
  <section class = "p-2 m-5 border border-dark">
    <h2 class = "text-center">Create New Post</h2>

    <form class="new-post-form d-flex flex-column">
      <div class = "col-12 col-md-8 column m-2">
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div class = "col-12 col-md-8 column m-2">
        <label for="category">Category</label>
        <input type="text" id="category" name="category" />
      </div>
      <div class = "col-12 col-md-8 column m-2">
        <label for="post-text">Text</label>
        <input type="text" id="post-text" name="post-text" />
      </div>
      <button type="submit" class="btn btn-dark m-2">Create</button>
    </form>
  </section>
  
  <section class = "p-2 m-5 border border-dark">
    <h2 class = "text-center">Create New Category</h2>

    <form class="new-category-form d-flex flex-column">
      <div class = "col-12 col-md-8 column m-2">
        <label for="category">Category</label>
        <input type="text" id="new-category" name="new-category" />
      </div>
      <button type="submit" class="btn btn-dark m-2">Create</button>
    </form>
  </section>
</div>

{{#if posts.length}}
<section class = "p-5">
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      <div class = "card col-md my-3">
        <div class = "card-header text-center bg-white text-dark">
          <h1 class = "card-title">
            {{post.title}}
          </h1>
          <h5 class = "card-text">
            created by {{post.user.username}} on {{format_date post.created_at}} in {{post.category.category_name}}
          </h5>
        </div>
        <div class = "card-body bg-white text-dark">
          <p class = "card-text">
            {{post.post_text}}
          </p>
        </div>
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
      </div>
    {{/each}}
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>
<script src="/javascript/add-category.js"></script>