<!--homepage-->
<ol class="post-list">
  {{#each posts as |post|}}
      <div class = "card col-md">
        <div class = "card-header text-center bg-white text-dark">
          <h5 class = "card-title">
            {{post.title}}
          </h5>
        </div>
        <div class = "card-body bg-white text-dark">
          <p class = "card-text">
            {{post.post_text}}
          </p>
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </div>
      </div>
  {{/each}}
</ol>