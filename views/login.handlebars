<div class = "d-flex flex-row justify-content-around">
  <section class = "p-2 m-5 border border-dark">
    <h2 class = "text-center">Login</h2>

    <form class="login-form d-flex flex-column">
      <div class = "col-12 col-md-8 column m-2">
        <label for="email-login">Email:</label>
        <input type="text" id="email-login" />
      </div>
      <div class = "col-12 col-md-8 column m-2">
        <label for="password-login">Password:</label>
        <input type="password" id="password-login" />
      </div>
      <button type="submit" class="btn btn-dark m-2">Login</button>
    </form>
  </section>
  
  <section class = "p-2 m-5 border border-dark">
    <h2 class = "text-center">Signup</h2>

    <form class="signup-form d-flex flex-column">
      <div class = "col-12 col-md-8 column m-2">
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" />
      </div>
      <div class = "col-12 col-md-8 column m-2">
        <label for="email-signup">Email:</label>
        <input type="text" id="email-signup" />
      </div>
      <div class = "col-12 col-md-8 column m-2">
        <label for="password-signup">Password:</label>
        <input type="password" id="password-signup" />
      </div>
      <button type="submit" class="btn btn-dark m-2">Signup</button>
    </form>
  </section>
</div>

<script src="javascript/login.js"></script>